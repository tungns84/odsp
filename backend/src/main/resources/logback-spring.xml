<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property for log file location -->
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="LOG_FILE" value="${LOG_FILE:-application}"/>

    <!-- Console Appender - Pattern format for development -->
    <appender name="CONSOLE_PATTERN" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId=%X{traceId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender - JSON format for production (log aggregation) -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>tenantId</includeMdcKeyName>
            <includeMdcKeyName>userId</includeMdcKeyName>
            <fieldNames>
                <timestamp>@timestamp</timestamp>
                <message>message</message>
                <logger>logger</logger>
                <thread>thread</thread>
                <level>level</level>
                <stackTrace>stack_trace</stackTrace>
            </fieldNames>
        </encoder>
    </appender>

    <!-- Rolling File Appender with daily rotation and compression -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${LOG_FILE}.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [traceId=%X{traceId:-}] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Daily rollover with compression -->
            <fileNamePattern>${LOG_PATH}/${LOG_FILE}.%d{yyyy-MM-dd}.gz</fileNamePattern>
            <!-- Keep 30 days of history -->
            <maxHistory>30</maxHistory>
            <!-- Total size cap of 3GB -->
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ==================== Profile-based Configuration ==================== -->

    <!-- Development Profile: DEBUG level, pattern console output -->
    <springProfile name="dev,default">
        <root level="INFO">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </root>
        
        <!-- Enable DEBUG for application packages in development -->
        <logger name="com.gs.dsp" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </logger>
        
        <!-- Reduce noise from libraries -->
        <logger name="org.springframework" level="INFO"/>
        <logger name="org.hibernate" level="INFO"/>
        <logger name="liquibase" level="INFO"/>
    </springProfile>

    <!-- Production Profile: INFO level, JSON console + file with rotation -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE"/>
        </root>
        
        <!-- Application packages at INFO in production (no DEBUG by default) -->
        <logger name="com.gs.dsp" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_JSON"/>
            <appender-ref ref="FILE"/>
        </logger>
        
        <!-- Reduce noise from libraries -->
        <logger name="org.springframework" level="WARN"/>
        <logger name="org.hibernate" level="WARN"/>
        <logger name="liquibase" level="WARN"/>
    </springProfile>

    <!-- Test Profile: WARN level, minimal output -->
    <springProfile name="test">
        <root level="WARN">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </root>
        
        <logger name="com.gs.dsp" level="INFO" additivity="false">
            <appender-ref ref="CONSOLE_PATTERN"/>
        </logger>
    </springProfile>

</configuration>
